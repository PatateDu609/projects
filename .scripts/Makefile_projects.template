SRCS		= 
INCLUDE		= 
LIBS		= 
OBJS		= ${SRCS:.cpp=.o}
CC			= g++
CFLAGS		= -Wall -Werror -Wextra
NAME		= 
RM			= rm -f

${NAME}:	${OBJS}
		${CC} ${OBJS} -o ${NAME}

all:		${NAME}

${OBJS}:
		${CC} ${CFLAGS} -c ${SRCS}

clean:
		${RM} ${OBJS}

fclean:		clean
		${RM} ${NAME}

re:			fclean all

.PHONY:		re fclean all clean